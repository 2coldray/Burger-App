<h1 class="text-center">Eat The Burger!</h1>

<h2>Burgers to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger Ate!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Eaten?</label><br>
    <input type="radio" name="devour" value="1" checked> Eaten!<br>
    <input type="radio" name="devour" value="0"> To Eat!
  </div>

  <button type="submit">Add Burger</button>
</form>